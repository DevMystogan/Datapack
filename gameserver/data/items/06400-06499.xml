    <item id="6403" name="Star Shard" icon="icon.etc_fairy_fire_i00">
        <!-- Starlight Festival Event - Gift from the sky. When it is thrown, it creates a small explosion. Can be used as an ingredient to make other types of fireworks. -->
        <set name="default_action" val="SKILL_REDUCE"/>
        <set name="commissionItemType" val="OTHER_ITEM"/>
        <restriction stackable="true" olympiad-restricted="true"/>
        <skills>
            <skill id="2023" level="1"/> <!-- Star Shard -->
        </skills>
    </item>
    <item id="6404" name="Boomboom Powder" icon="icon.etc_powder_black_i00">
        <!-- Starlight Festival Event - Black powder. Ingredient used to make larger fireworks. -->
        <set name="commissionItemType" val="OTHER_ITEM"/>
        <restriction stackable="true"/>
    </item>
    <item id="6405" name="Magnesium" icon="icon.etc_broken_crystal_silver_i00">
        <!-- Starlight Festival Event - Chemical compound that generates a powerful flash when ignited. It is needed to make large fireworks. -->
        <set name="commissionItemType" val="OTHER_ITEM"/>
        <restriction stackable="true"/>
    </item>
    <item id="6406" name="Firecracker" icon="icon.etc_small_ultra_bomb_i00">
        <!-- Explosive device that brilliantly lights up the sky. -->
        <set name="default_action" val="SKILL_REDUCE"/>
        <set name="immediate_effect" val="true"/>
        <set name="commissionItemType" val="OTHER_ITEM"/>
        <restriction stackable="true" coc-restricted="true"/>
        <skills>
            <skill id="2024" level="1"/> <!-- Firecracker -->
        </skills>
    </item>
    <item id="6407" name="Large Firecracker" icon="icon.etc_ultra_bomb_i00">
        <!-- Large explosive device that ignites to light up the sky. -->
        <set name="default_action" val="SKILL_REDUCE"/>
        <set name="immediate_effect" val="true"/>
        <set name="handler" val="ItemSkills"/>
        <set name="commissionItemType" val="OTHER_ITEM"/>
        <restriction stackable="true" coc-restricted="true"/>
        <skills>
            <skill id="2025" level="1"/> <!-- Large Firecracker -->
        </skills>
    </item>
    <armor id="6408" name="Formal Wear" icon="icon.armor_t2000_ul_i00">
        <!-- Tuxedo for male characters, and a wedding dress for female characters. Equipping this disables armor. Hair accessories, weapons, and magic armor remain equipped. -->
