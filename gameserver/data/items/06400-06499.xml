        <restriction tradable="false" dropable="false" sellable="false" depositable="false" stackable="true" clan-depositable="false" mailable="false" commissionable="false"/>
    </item>
    <item id="6401" name="Fox Crest" icon="icon.etc_paper_red_i00">
