<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
		   targetNamespace="http://l2j.org"
		   xmlns="http://l2j.org"
		   elementFormDefault="qualified">

	<xs:include schemaLocation="common.xsd"/>

	<xs:element name="list">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="scroll" maxOccurs="unbounded" minOccurs="0">
					<xs:complexType>
						<xs:attribute type="xs:long" name="id" use="required"/>
						<xs:attribute type="CrystalType" name="grade" use="optional"/>
						<xs:attribute type="xs:byte" name="group" default="0"/>
						<xs:attribute type="xs:int" name="max-enchant" default="127"/> <!-- enchant limit -->
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>